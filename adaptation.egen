AdaptationPolicy 30 {
Condition {
BatteryState = Charging  AND
BatteryLevel = High AND
Threshold_High = 63 AND
Threshold_Medium = 46 AND
AppState = Foreground 
} then
Adaptation {
SensingInterval = 2500 AND
Decreasing_Factor = 20
}
}
AdaptationPolicy 1 {
Condition {
BatteryState = Discharging  AND
BatteryLevel = Medium AND
Threshold_High = 80 AND
Threshold_Medium = 50 AND
AppState = Background 
} then
Adaptation {
SensingInterval = 3000 AND
Decreasing_Factor = 30
}
}
